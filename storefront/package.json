{
  "name": "sunshine-coast-4wd-tours-storefront",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 8000",
    "build": "next build",
    "start": "next start -p 8000",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:unit": "jest tests/unit",
    "test:unit:coverage": "jest tests/unit --coverage",
    "test:a11y": "jest tests/a11y",
    "test:e2e": "playwright test",
    "test:e2e:ci": "playwright test --reporter=github",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:mobile": "playwright test --project='Mobile Safari'",
    "test:e2e:desktop": "playwright test --project='Desktop Chrome'",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:complete-flow": "playwright test tests/e2e/complete-checkout-flow.spec.ts",
    "test:e2e:cart-persistence": "playwright test tests/e2e/cart-persistence.spec.ts",
    "test:e2e:error-handling": "playwright test tests/e2e/error-handling.spec.ts",
    "test:e2e:navigation": "playwright test tests/e2e/navigation.spec.ts",
    "test:e2e:report": "playwright show-report",
    "test:smoke": "playwright test tests/smoke --reporter=list",
    "test:smoke:headed": "playwright test tests/smoke --headed",
    "test:smoke:ui": "playwright test tests/smoke --ui",
    "test:smoke:debug": "playwright test tests/smoke --debug",
    "pretest:e2e": "npm run test:smoke",
    "test:all": "npm run test:ci && npm run test:a11y && npm run test:smoke && npm run test:e2e",
    "test:coverage": "jest --coverage",
    "test:addons": "jest tests/unit/addons tests/components/addons",
    "test:addons:integration": "jest tests/integration/addons",
    "test:addons:a11y": "jest tests/a11y/addons",
    "test:addons:e2e": "playwright test tests/e2e/addons",
    "test:addons:performance": "jest tests/performance/addons",
    "test:addons:all": "npm run test:addons && npm run test:addons:integration && npm run test:addons:a11y && npm run test:addons:e2e",
    "test:checkout": "playwright test tests/e2e/checkout-flow.spec.ts",
    "test:checkout:mobile": "playwright test tests/e2e/checkout-flow.spec.ts --project='Mobile Safari'",
    "test:checkout:unit": "jest tests/unit/cart",
    "test:checkout:integration": "jest tests/integration/checkout",
    "test:checkout:all": "npm run test:checkout:unit && npm run test:checkout:integration && npm run test:checkout",
    "validate": "npm run type-check && npm run lint && npm run test:ci",
    "playwright:install": "playwright install",
    "prepare": "cd .. && husky"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "jest --bail --findRelatedTests --passWithNoTests"
    ],
    "**/*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@medusajs/js-sdk": "^2.11.3",
    "isomorphic-dompurify": "^2.14.0",
    "next": "^14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "swr": "^2.3.6",
    "web-vitals": "^3.5.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@swc/jest": "^0.2.29",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "axe-core": "^4.8.3",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-axe": "^8.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^16.2.6",
    "sharp": "^0.34.5",
    "typescript": "^5.0.0"
  }
}
